<div class="py-5">
  <nav class="flex items-center space-x-1 text-sm text-muted mb-3">
    <a href="" class="capitalize transition-colors ease-in-out duration-200 hover:text-white">Home</a>
    <span>/</span>
    <a href="" class="capitalize transition-colors ease-in-out duration-200 hover:text-white">
      <%- singlePost.category.name  %></a>
  </nav>
  <h2 class="text-2xl font-bold text-white mb-5">
    <%-singlePost.title  %>
  </h2>
  <div class="flex items-center gap-2 flex-wrap mt-3 mb-5">
    <% if (Array.isArray(singlePost.tags) && singlePost.tags.length > 0) { %>
    <% singlePost.tags.forEach(tag => { %>
    <a href="" class="text-xs font-semibold rounded p-1.5 bg-gray-800 text-white">
      <%- tag  %>
    </a>
    <% }) %>
    <% } %>
  </div>
  <div class="flex items-center gap-2 text-sm ">
    <span class="capitalize"><%- singlePost.author.name  %></span>-<span><%= new Date(singlePost.createdAt).toLocaleDateString('en-US', { month: 'long',day: 'numeric',year: 'numeric' }) %></span>
  </div>
</div>
<div class="flex md:flex-row flex-col items-start relative md:gap-5 gap-10">
  <div class="w-full md:w-4/6">
    <div class="w-full aspect-video rounded overflow-hidden mb-5">
      <img src="<%- singlePost.image.secure_url  %>" alt="<%-singlePost.title  %>" class="w-full h-full object-cover object-center">
    </div>
    <article class="text-white prose prose-h1:text-white prose-h2:text-white   prose-a:text-blue-500" id="content">
      <%- singlePost.content  %>
    </article>
    <div class="flex items-center justify-between gap-5 my-5">
      <div class="flex items-center flex-wrap gap-2 py-5">
        <% if (Array.isArray(singlePost.tags) && singlePost.tags.length > 0) { %>
        <% singlePost.tags.forEach(tag => { %>
        <a href="" class="text-xs font-semibold rounded p-1.5 bg-gray-800 text-white">
          <%- tag  %>
        </a>
        <% }) %>
        <% } %>
      </div>
      <script>
        function likePost(postId) {

          fetch(`/post/like/${postId}`, {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
              },
            })
            .then(response => response.json())
            .then(data => {
              if (data.success) {
                document.getElementById('like-container').classList.add('text-red-500')
                document.getElementById('like-count').innerHTML = `(${data.likes})`;
              }
            })
            .catch(error => {
              console.error('Error:', error);
            });
        }
      </script>
      <div class="flex items-center justify-center w-fit gap-1 " id="like-container">
        <button onclick="likePost('<%= singlePost._id %>')" class="flex items-center justify-center" type="submit" title="like button">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
          </svg>
        </button>
        <span id="like-count">(<%- singlePost.likes  %>)</span>
      </div>
    </div>
    <div class="p-4 bg-gray-900 rounded border border-white/10">
      <div class="flex items-center flex-wrap gap-5 mb-5">
        <div class="w-24 aspect-square rounded-full overflow-hidden">
          <img src="<%-singlePost.author.avatar.secure_url  %>" alt="Avatar" class="w-full h-full object-cover">
        </div>
        <div>
          <h1 class="font-medium text-white mb-3 capitalize"><%- singlePost.author.name  %></h1>
          <div class="flex items-center flex-wrap gap-2">
            <% if (singlePost.author.isSocialLinksVisible.email) { %>
            <a href="mailto:<%-singlePost.author.socialLinks.email  %>" class="flex items-center justify-center overflow-hidden transition-all duration-200 ease-in-out hover:scale-110 hover:text-white" title="mail">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-mail">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                <polyline points="22,6 12,13 2,6"></polyline>
              </svg>
            </a>
            <% } %>
            <% if (singlePost.author.isSocialLinksVisible.facebook) { %>
            <a href="<%-singlePost.author.socialLinks.facebook  %>" target="_blank" class="flex items-center justify-center overflow-hidden transition-all duration-200 ease-in-out hover:scale-110 hover:text-white" title="mail">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-facebook">
                <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
              </svg>
            </a>
            <% } %>
            <% if (singlePost.author.isSocialLinksVisible.twitter) { %>
            <a href="<%-singlePost.author.socialLinks.twitter  %>" target="_blank" class="flex items-center justify-center overflow-hidden transition-all duration-200 ease-in-out hover:scale-110 hover:text-white" title="mail">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-twitter">
                <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path>
              </svg>
            </a>
            <% } %>
            <% if (singlePost.author.isSocialLinksVisible.instagram) { %>
            <a href="<%-singlePost.author.socialLinks.instagram  %>" target="_blank" class="flex items-center justify-center overflow-hidden transition-all duration-200 ease-in-out hover:scale-110 hover:text-white" title="mail">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-instagram">
                <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
              </svg>
            </a>
            <% } %>
            <% if (singlePost.author.isSocialLinksVisible.github) { %>
            <a href="<%-singlePost.author.socialLinks.github  %>" target="_blank" class="flex items-center justify-center overflow-hidden transition-all duration-200 ease-in-out hover:scale-110 hover:text-white" title="mail">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-github">
                <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
              </svg>
            </a>
            <% } %>
            <% if (singlePost.author.isSocialLinksVisible.linkedin) { %>
            <a href="<%-singlePost.author.socialLinks.linkedin  %>" target="_blank" class="flex items-center justify-center overflow-hidden transition-all duration-200 ease-in-out hover:scale-110 hover:text-white" title="mail">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-linkedin">
                <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
                <rect x="2" y="9" width="4" height="12"></rect>
                <circle cx="4" cy="4" r="2"></circle>
              </svg>
            </a>
            <% } %>
          </div>
        </div>

      </div>
      <div>
        <p class="text-white text-sm text-pretty"><%-singlePost.author.description  %></p>
      </div>

    </div>

    <% if( previousPost || nextPost ) { %>
    <div class="grid md:grid-cols-2 grid-cols-1 gap-5 mt-10">
      <% if( previousPost ) { %>
      <div class="flex flex-col gap-1 items-start rounded transition-all ease-in-out duration-200 p-3 border border-white/10  hover:bg-gray-900">
        <a href="/blog/<%- previousPost.slug  %>" class="text-sm">Previous Blog</a>
        <a href="/blog/<%- previousPost.slug  %>" class="text-sm line-clamp-2 text-white">Types of AI Based on Functionalities</a>
      </div>
      <% } %>
      <% if( nextPost ) { %>
      <div class="flex flex-col gap-1 md:items-end items-start rounded transition-all ease-in-out duration-200 p-3 border border-white/10   hover:bg-gray-900">
        <a href="/blog/<%- nextPost.slug  %>" class="text-sm">Next Blog</a>
        <a href="/blog/<%- nextPost.slug  %>" class="text-sm line-clamp-2 text-white">Search Algorithms in AI</a>
      </div>
      <% } %>
    </div>
    <% } %>
  </div>
  <div class="w-full md:w-2/6 sticky top-20 ">
    <% if(categories.length) { %>
    <div class="p-4 rounded border border-white/10 mb-5">
      <h1 class="text-xl font-medium text-white mb-2">Categories</h1>
      <div class="flex items-center gap-2 flex-wrap mt-2">
        <% categories.forEach((cat)=>{ %>
        <a href="" class="flex items-center space-x-1 text-xs font-semibold rounded p-2 bg-gray-800 text-white"><%- cat.name  %></a>
        <%  }) %>
      </div>
    </div>
    <% } %>
    <div class="p-4 rounded border border-white/10 mb-5">
      <h1 class="text-xl font-medium text-white">Tags</h1>
      <div class="flex items-center gap-2 flex-wrap mt-2">
        <a href="" class="text-xs font-semibold rounded p-1.5 bg-gray-800 text-white">code (2)</a>
        <a href="" class="text-xs font-semibold rounded p-1.5 bg-gray-800 text-white">react (3)</a>
        <a href="" class="text-xs font-semibold rounded p-1.5 bg-gray-800 text-white">props (4)</a>
        <a href="" class="text-xs font-semibold rounded p-1.5 bg-gray-800 text-white">code (2)</a>
        <a href="" class="text-xs font-semibold rounded p-1.5 bg-gray-800 text-white">react (3)</a>
        <a href="" class="text-xs font-semibold rounded p-1.5 bg-gray-800 text-white">props (4)</a>
        <a href="" class="text-xs font-semibold rounded p-1.5 bg-gray-800 text-white">code (2)</a>
        <a href="" class="text-xs font-semibold rounded p-1.5 bg-gray-800 text-white">react (3)</a>
        <a href="" class="text-xs font-semibold rounded p-1.5 bg-gray-800 text-white">props (4)</a>
      </div>
    </div>
  </div>
</div>