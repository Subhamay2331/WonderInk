<div class="my-5 flex items-center justify-center">
    <div class="border border-white/10 rounded max-w-md w-full">
        <div class="px-4 py-3 border-b border-b-white/10">
            <h1 class="text-xl font-semibold text-white ">Add Category</h1>
        </div>
        <% if (error_msg.length > 0) { %>
        <div id="error-message"
            class="mx-3 mt-4 p-2 rounded text-center border border-red-500 bg-red-500/5">
            <p class="text-red-600 text-sm">
                <%- error_msg %>
            </p>
        </div>
        <script>
            setTimeout(function() {
                const errorMessage = document.getElementById(
                    "error-message");
                if (errorMessage) {
                    errorMessage.style.display = 'none';
                }
            }, 5000);
        </script>

        
        <% } %>
        <% if (success_msg.length > 0) { %>
        <div id="success_msg"
            class="mx-3 mt-4 p-2 rounded text-center border border-emerald-500 bg-emerald-500/5">
            <p class="text-emerald-600 text-sm">
                <%- success_msg %>
            </p>
        </div>
        <script>
            setTimeout(function() {
                const successMessage = document.getElementById(
                    "success_msg");
                if (successMessage) {
                    successMessage.style.display = 'none';
                }
            }, 5000);
        </script>

        
        <% } %>
        <form action="/admin/api/v1/category/add" method="post" class="p-4">
            <div class="mb-5">
                <label for="name" class="text-sm">Category Name</label>
                <input type="text" name="name" id="name"
                    placeholder="Enter your category name"
                    class="w-full h-10 px-2 rounded border text-white placeholder:text-sm  border-white/10 bg-gray-900"
                    required>
            </div>
            <button type="submit"
                class="w-full py-2 rounded transition-colors duration-200 ease-in-out bg-blue-600 text-white hover:bg-blue-500">Add
                Category</button>
        </form>
    </div>
</div>