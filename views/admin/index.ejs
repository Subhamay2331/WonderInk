</div>
<div class="grid md:grid-cols-2 grid-cols-1 gap-5 my-5">
    <div class="border border-white/10 rounded">
        <div
            class="flex items-center justify-between px-4 py-3 border-b border-b-white/10">
            <h1 class="text-xl font-semibold text-white ">Latest Post</h1>
            <a href=""
                class="text-sm transition-colors duration-200 ease-in-out hover:text-white">View
                all</a>
        </div>
        <div>
            <% if (posts.length) { %>
            <% posts.forEach((post) => { %><a
                href="/blog/<%- post.slug %>">
                <div
                    class="p-4 flex items-center gap-3 border-b border-b-white/10 transition-colors duration-200 ease-in-out hover:bg-gray-900 overflow-hidden">
                    <div>
                        <div class="h-16 aspect-video overflow-hidden rounded">
                            <img src="<%- post.image.secure_url %>"
                                alt="<%- post.title %>">
                        </div>
                    </div>
                    <div>
                        <h1 class="text-sm text-white line-clamp-2">
                            <%- post.title %>
                        </h1>
                        <span class="text-xs text-muted">
                            <%= new Date(post.createdAt).toLocaleDateString('en-US', {
month: 'long',
day: 'numeric',
year: 'numeric'
}) %>
                        </span>
                    </div>
                </div>
            </a>
            <% }) %>
            <% } else { %>
            <div
                class="p-4 flex items-center justify-between flex-wrap gap-1 border-b border-b-white/10 transition-colors duration-200 ease-in-out hover:bg-gray-900">
                No post found!
            </div>

            
            <% } %>
        </div>
    </div>
    <div class="border border-white/10 rounded">
        <div
            class="flex items-center justify-between px-4 py-3 border-b border-b-white/10">
            <h1 class="text-xl font-semibold text-white ">Recent User</h1>
            <a href="/admin/users"
                class="text-sm transition-colors duration-200 ease-in-out hover:text-white">View
                all</a>
        </div>
        <div class="mb-auto">
            <% if (users.length) { %>
            <% users.forEach((user) => { %><a href="">
                <div
                    class="p-4 flex items-center justify-between flex-wrap gap-1 border-b border-b-white/10 transition-colors duration-200 ease-in-out hover:bg-gray-900">
                    <h1 class="text-white line-clamp-1 capitalize">
                        <%- user.name %>
                    </h1>
                    <span class="text-sm text-muted">
                        <% if (user.isAdmin) { %>Admin
                        <% } else { %>Author

                        
                        <% } %>
                    </span>
                    <span class="text-sm text-muted">
                        <%= new Date(user.createdAt).toLocaleDateString('en-US', {
month: 'short',
day: 'numeric',
year: 'numeric'
}) %>
                    </span>
                    <% if (user.isActive) { %><span
                        class="text-xs p-1 bg-emerald-600 rounded text-white">Active</span>
                    <% } else { %><span
                        class="text-xs p-1 bg-red-600 rounded text-white">Inactive</span>

                    
                    <% } %>
                </div>
            </a>
            <% }) %>
            <% } else { %>
            <div
                class="p-4 flex items-center justify-between flex-wrap gap-1 border-b border-b-white/10 transition-colors duration-200 ease-in-out hover:bg-gray-900">
                No users found!
            </div>

            
            <% } %>
        </div>
    </div>
</div>