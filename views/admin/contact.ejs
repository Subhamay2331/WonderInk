<div class="my-5 border border-white/10 rounded">
    <div class="flex items-center justify-between px-4 py-3 border-b border-b-white/10 ">
        <h1 class="flex items-center gap-2 text-2xl font-bold text-white">
            Contact
            <span
                class="bg-blue-600 text-white text-xs font-normal p-1 rounded">
                <%- contactCount %>
            </span>
        </h1>
    </div>
    <% if(contact.length) { %>
        <div class="p-4 grid md:grid-cols-2 grid-cols-1 gap-5">
            <% contact.forEach((con)=>{%>
                <details class="border <% if( con.isRead) { %>border-white/10 <% }else{ %> border-blue-500 <% } %> rounded-sm divide-y divide-white/10">
                    <summary class="text-sm transition-colors duration-200 ease-in-out cursor-default hover:bg-gray-900 p-2">
                        <span class="text-white capitalize pl-0.5"><%- con.name  %></span>
                        -
                        <span class="text-xs italic ml-auto"><%= new Date(con.createdAt).toLocaleDateString('en-US', {
                            month: 'short',
                            day: 'numeric',
                            year: 'numeric'
                            }) %></span>
                        <div class="flex flex-col gap-2 text-sm pl-4">
                            <span > <%- con.email  %></span>
                            <div class="flex items-center justify-end gap-2">
                                <form action="">
                                    <input type="hidden" name="isRead" id="isRead" value="<%-con.isRead  %>">
                                    <button class="border border-white/10 px-2 p-1 rounded hover:bg-gray-700 text-white transition-colors ease-in-out duration-200">Mark as read</button>
                                </form>
                                <form action="">
                                    <button class="border border-white/10 px-2 p-1 rounded hover:bg-gray-700 text-white transition-colors ease-in-out duration-200">Delete</button>
                                </form>
                            </div>
                        </div>
                    </summary>
                    <p class="p-2"><%- con.message%></p>
                </details>
            <% }) %>  
        </div>
    <%  } else {%>
        <h1 class="text-center p-5">No contact found found</h1>
    <%} %>

</div>